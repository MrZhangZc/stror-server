{
  "name": "koa-tpl",
  "version": "1.0.0",
  "main": "/bin/www",
  "repository": "git@github.com:MrZhangZc/koa-tpl-mongo.git",
  "author": "<jiayouzzc@126.com>",
  "license": "MIT",
  "standard": {
    "globals": [
      "__ilogger",
      "__mlogger"
    ]
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development node bin/www",
    "prod": "cross-env NODE_ENV=production node bin/www",
    "test": "cross-env NODE_ENV=development mocha",
    "coverage": "nyc --reporter=html npm run test",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "pm2-dev": "pm2 start up.yml koa-tpl-test",
    "pm2-prod": "pm2 start up.yml koa-tpl",
    "pm2-docker-dev": "pm2-runtime start up.yml --only koa-tpl-test",
    "pm2-docker-prod": "pm2-runtime start up.yml --only koa-tpl",
    "build": "docker build -t koa-tpl:latest .",
    "push": "docker push koa-tpl"
  },
  "dependencies": {
    "axios": "^0.19.1",
    "config": "^3.2.4",
    "glob": "^7.1.6",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-log4": "^2.3.2",
    "koa-router": "^7.4.0",
    "mongoose": "^5.9.12",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "standard": "^14.3.1",
    "supertest": "^4.0.2"
  }
}
